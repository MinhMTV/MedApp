             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:App1"
             x:Class="App1.View.GeneralPages.WelcomePage"
             BackgroundColor= "SlateGray">
    
    
    <StackLayout
         Padding="0,120,0,0"
         Spacing="20">

            <StackLayout
             Spacing="0">

                <Label Text="Herzlich Willkomen"
                TextColor="White"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                       FontSize="Large"/>

                <Label Text="zur Cognitive Bias Trainings App!"
