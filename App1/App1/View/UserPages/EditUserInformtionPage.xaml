<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="CBMTraining.View.UserPages.EditUserInformtionPage"
             Title="Benutzerdaten">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label Padding="5,20,5,50"
                Text="Benutzerdaten bearbeiten"
                HorizontalOptions="CenterAndExpand"
                FontSize="Large"
                FontAttributes="Italic"
                TextColor="Black"/>
            
            <Label
                Text="Altes Passwort"
                x:Name = "Lbl_OldPassword"
                FontAttributes="Italic"
                TextColor="Black"
                FontSize="Large"/>
            <Entry x:Name="Entry_OldPassword"
                   IsPassword="True"
                   Placeholder="Altes Passwort eingeben"
                   ClearButtonVisibility="WhileEditing"
                   FontSize="Large"/>
            <Label
                Text="Neues Passwort"
                x:Name = "Lbl_NewPassword"
                FontAttributes="Italic"
                TextColor="Black"
                FontSize="Large"/>
            <Entry x:Name="Entry_NewPassword"
                   IsPassword="True"
                   Placeholder="Neues Passwort eingeben"
                   ClearButtonVisibility="WhileEditing"
                   FontSize="Large"/>
            <Label
                Text="Passwort bestätigen"
                x:Name="Lbl_ConfirmPassword"
                FontAttributes="Italic"
                TextColor="Black"
                FontSize="Large"/>
            <Entry x:Name="Entry_ConfirmPassword"
                   IsPassword="True"
                   Placeholder="Neues Passwort wiederholen"
                   ClearButtonVisibility="WhileEditing"
                   FontSize="Large"/>
            <Button 
                    Text="OK" 
                    TextColor="White"
                    BackgroundColor="Blue"
                    Margin="60,50,60,60"
                    Clicked="OK_Clicked" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>